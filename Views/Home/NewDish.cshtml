@model ChefsNDishes.Models.Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>ChefsNDishes</title>
</head>
<body>
    <div class="container mx-auto my-5">
        <div class="container">
            <div class="container row">
                <h2 class="d-inline text-danger">Add a Dish!</h2>
                <a class="ml-auto" href="/">Home</a>
            </div>
            <hr>
            <div class="container mx-auto col-8">
                <form class="form-group mt-5 d-flex align-items-center flex-column justify-content-center" asp-action="AddDish" asp-controller="Home" method="post" class="form-group mt-5">
                    <span class="text-danger" asp-validation-for="chefs_ChefId"></span>
                    <select class="form-control col-8" type="text" asp-for="chefs_ChefId" placeholder="Chef's name">
                        <option value="" disabled selected>Chef Name</option>
                        @{
                            foreach (var chef in @ViewBag.AllChefs)
                            {
                                <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                            }
                        }
                    </select>

                    <span class="text-danger mt-3" asp-validation-for="Name"></span>
                    <input class="form-control col-8 mt-3" type="text" asp-for="Name" placeholder="Dish Name">

                    <span class="text-danger mt-3" asp-validation-for="Calories"></span>
                    <input class="form-control col-8 mt-3" type="number" min="1" asp-for="Calories" placeholder="Calories">
            
                    <span class="text-danger mt-3" asp-validation-for="Tastiness"></span>
                    <select class="form-control col-8 mt-3" type="number" asp-for="Tastiness" placeholder="Tastiness">
                        <option value="" disabled selected>Tastiness</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>

                    <span class="text-danger mt-3" asp-validation-for="Description"></span>
                    <textarea asp-for="Description" class=" form-control col-8 mt-3" placeholder="Description"></textarea>
                    <button type="submit" class="btn btn-primary mt-3">Add Dish</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>